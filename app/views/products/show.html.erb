<div class="back">
  <%= link_to 'Back', products_path, class: "btn btn-primary" %>
</div>

<% @product.images.each do |img| %>

<%= image_tag img, style: "max-width: 600px;" %>


<% end %>


<div class="container">
  <div class="row">
    <div class="col-md-6">



    

    <div class="col-md-6">
      <h2><%= @product.name %></h2>

      
        
      <p class="openred" style="font-size: 24px; color: #FF0000;"><%= @product.price %></p>
                
          <% if @product.part_number.present? %>
          Part #:
          <%= @product.part_number %>
          <% end %>
        
      
<br><br>
    <ul>
      <% if @product.bullet1.present? %>
        <li><%= @product.bullet1 %></li>
      <% end %>

      <% if @product.bullet2.present? %>
        <li><%= @product.bullet2 %></li>
      <% end %>

      <% if @product.bullet3.present? %>
        <li><%= @product.bullet3 %></li>
      <% end %>

      <% if @product.bullet4.present? %>
        <li><%= @product.bullet4 %></li>
      <% end %>
    </ul>
      

    </div>

        
  </div>


</div>



    



