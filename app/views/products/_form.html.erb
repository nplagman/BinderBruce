    <%= f.text_area :brief, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :buylink %>
    <%= f.text_field :buylink, class: "form-control" %>
  </div>

    <div class="form-group">
    <%= f.label :bullet1 %>
    <%= f.text_field :bullet1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :verdict %>
    <%= f.text_field :verdict, class: "form-control" %>
  </div>

    <div class="form-group">
      <%= f.label :goodverdict %>
      <%= f.text_field :goodverdict, class: "form-control" %>
    </div>

  <div class="form-group">
    <%= f.label :youtube %>
    <%= f.text_field :youtube, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose one"}, {class: "btn btn-default dropdown-toggle"} %>
